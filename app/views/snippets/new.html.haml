= title "New Paste"
= form_for @snippet do |f|

  .row
    .small-4.columns
      = f.text_field :name, placeholder: 'name this file...'
    .small-8.medium-5.large-5.columns
      .row.collapse
        .small-5.medium-4.large-4.columns
          %a.button.prefix{href: '#'}
            Language
        .small-7.medium-8.large-8.columns
          = f.collection_select :language_id, Language.all, :id, :name

  = f.label :raw
  = f.text_area :raw, rows: 14, cols: 50
  = f.submit "Paste It!", class: 'button small'

